/* index.wxss */
.container {
  padding: 16px;
  background-color: #f5f5f5;
  padding-bottom: 80px;
}

/* 儿童信息区域 */
.child-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 16px;
  border-radius: 12px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.child-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.switch-icon {
  font-size: 14px;
  color: #999;
}

/* 标签页切换 */
.tab-container {
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.tab-bar {
  display: flex;
  border-bottom: 1px solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16px;
  position: relative;
}

.tab-item.active {
  color: #4A90E2;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 3px;
  background-color: #4A90E2;
  border-radius: 3px;
}

.tab-text {
  font-size: 15px;
  font-weight: 500;
}

/* 任务列表 */
.task-list {
  padding: 8px 16px 16px;
}

.task-item {
  background-color: #fafafa;
  border-radius: 10px;
  padding: 16px;
  margin-top: 12px;
  position: relative;
  transition: all 0.3s;
}

.task-item:first-child {
  margin-top: 8px;
}

.task-item.completed {
  background-color: #f0f9ff;
  opacity: 0.8;
}

.task-content {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.task-item.completed .task-title {
  text-decoration: line-through;
  color: #666;
}

.task-reward {
  font-size: 15px;
  font-weight: 600;
  color: #52c41a;
  margin-left: 12px;
}

.task-description {
  font-size: 13px;
  color: #666;
  line-height: 1.5;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4px;
}

.task-deadline,
.task-complete-time {
  font-size: 12px;
  color: #999;
}

.task-actions {
  display: flex;
  gap: 8px;
}

.btn-complete {
  background-color: #52c41a;
  color: white;
  border: none;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 16px;
}

.btn-delete {
  background-color: #ff4d4f;
  color: white;
  border: none;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 16px;
}

.task-check {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #4A90E2;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: bold;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px 0;
}

.loading-spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60px 0;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 添加任务按钮 */
.add-task-btn {
  position: fixed;
  bottom: 24px;
  right: 24px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A90E2 0%, #3A80D2 100%);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4px 12px rgba(74, 144, 226, 0.4);
  border: none;
}

.add-icon {
  font-size: 30px;
  font-weight: bold;
}

/* 对话框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 20px;
  z-index: 1001;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 24px;
  color: #999;
}

.modal-body {
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 16px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #4A90E2;
  outline: none;
}

.form-textarea {
  min-height: 80px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.modal-footer {
  display: flex;
  gap: 12px;
  padding-top: 16px;
  border-top: 1px solid #f0f0f0;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  border-radius: 24px;
  font-size: 15px;
  font-weight: 500;
  padding: 12px 0;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

.btn-confirm {
  background-color: #4A90E2;
  color: white;
}