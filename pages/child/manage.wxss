/* manage.wxss */
.container {
  padding: 16px;
  padding-bottom: 100px;
}

.header {
  margin-bottom: 24px;
}

.subtitle {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
  display: block;
}

/* 儿童列表 */
.child-list {
  margin-bottom: 20px;
}

.child-item {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.child-item.active {
  border: 2px solid #4A90E2;
}

.child-main {
  display: flex;
  align-items: center;
}

.child-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #4A90E2;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: bold;
  margin-right: 15px;
}

.child-info {
  flex: 1;
}

.child-name {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 4px;
  color: #333;
}

.child-meta {
  display: flex;
  gap: 12px;
  font-size: 13px;
  color: #666;
}

.child-select {
  margin-left: 10px;
}

.child-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
}

.child-actions button {
  font-size: 12px;
}

/* 添加子女按钮 */
.add-child-btn {
  position: fixed;
  bottom: 30px;
  left: 16px;
  right: 16px;
  background-color: #4A90E2;
  color: white;
  border-radius: 28px;
  font-size: 16px;
  font-weight: 600;
  padding: 12px 0;
  box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
}

.add-child-btn:active {
  background-color: #3A80D2;
}

/* 对话框样式 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.dialog {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 20px;
  z-index: 1000;
  animation: slide-up 0.3s ease-out;
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.dialog-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  font-size: 24px;
  color: #999;
}

.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
}

.gender-select {
  display: flex;
  gap: 12px;
}

.gender-item {
  flex: 1;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  text-align: center;
  font-size: 14px;
  color: #666;
}

.gender-item.active {
  border-color: #4A90E2;
  background-color: #e6f7ff;
  color: #4A90E2;
}

.dialog-footer {
  display: flex;
  gap: 12px;
  margin-top: 24px;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  border-radius: 24px;
  font-size: 15px;
  font-weight: 500;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background-color: #4A90E2;
  color: white;
}