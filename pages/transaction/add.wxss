/* add.wxss */
.container {
  padding: 16px;
  background-color: #f5f5f5;
  padding-bottom: 40px;
}

.header {
  margin-bottom: 24px;
}

.page-title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.child-info {
  font-size: 14px;
  color: #666;
}

.section {
  background-color: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin-bottom: 16px;
}

/* 交易类型选择 */
.type-select {
  display: flex;
  gap: 16px;
}

.type-item {
  flex: 1;
  padding: 16px;
  border: 1px solid #ddd;
  border-radius: 8px;
  text-align: center;
  transition: all 0.3s;
}

.type-item.active {
  border-color: #4A90E2;
  background-color: #e6f7ff;
}

.type-icon {
  display: block;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 8px;
}

.type-item.expense .type-icon {
  color: #ff4d4f;
}

.type-item.income .type-icon {
  color: #52c41a;
}

.type-text {
  font-size: 14px;
  color: #666;
}

.type-item.active .type-text {
  color: #4A90E2;
  font-weight: 500;
}

/* 金额输入 */
.amount-input {
  display: flex;
  align-items: center;
}

.currency-symbol {
  font-size: 24px;
  font-weight: 500;
  color: #333;
  margin-right: 8px;
}

.amount {
  flex: 1;
  font-size: 32px;
  font-weight: 600;
  color: #333;
  text-align: left;
  padding: 0;
  border: none;
}

.amount:focus {
  outline: none;
}

/* 分类选择 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 8px;
  border: 1px solid #ddd;
  border-radius: 8px;
  transition: all 0.3s;
}

.category-item.active {
  border-color: #4A90E2;
  background-color: #e6f7ff;
}

.category-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  margin-bottom: 8px;
}

.category-item.active .category-icon {
  background-color: #4A90E2;
}

.category-name {
  font-size: 12px;
  color: #666;
  text-align: center;
}

.category-item.active .category-name {
  color: #4A90E2;
  font-weight: 500;
}

/* 描述输入 */
.description-input {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
}

.description-input:focus {
  border-color: #4A90E2;
  outline: none;
}

/* 日期时间选择 */
.datetime-input {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
}

.datetime-input:focus {
  border-color: #4A90E2;
  outline: none;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16px;
  margin-top: 24px;
}

.btn-cancel,
.btn-save {
  flex: 1;
  border-radius: 24px;
  font-size: 15px;
  font-weight: 500;
  padding: 12px 0;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

.btn-save {
  background-color: #4A90E2;
  color: white;
}

.btn-save:active {
  background-color: #3A80D2;
}