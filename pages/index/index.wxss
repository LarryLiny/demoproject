/* index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}
.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

/* 余额卡片样式 */
.balance-card {
  padding: 20px;
  background: linear-gradient(135deg, #4A90E2 0%, #5B6EF5 100%);
  color: white;
  border-radius: 16px;
  margin-bottom: 20px;
  position: relative;
  overflow: hidden;
}

.balance-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.child-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}

.child-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: bold;
  margin-right: 15px;
}

.child-details {
  flex: 1;
}

.child-name {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 4px;
}

.child-age {
  font-size: 14px;
  opacity: 0.9;
}

.switch-icon {
  color: white;
  opacity: 0.8;
}

.balance-section {
  position: relative;
  z-index: 1;
}

.balance-label {
  font-size: 14px;
  opacity: 0.9;
  margin-bottom: 8px;
}

.balance-amount {
  font-size: 36px;
  font-weight: 700;
  color: white;
}

/* 快捷操作按钮 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px 10px;
}

.action-icon {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
  font-size: 24px;
}

.action-icon.add {
  background-color: #4A90E2;
  color: white;
}

.action-icon.stats {
  background-color: #52c41a;
  color: white;
}

.action-icon.task {
  background-color: #faad14;
  color: white;
}

.action-text {
  font-size: 13px;
  color: #666;
}

/* 最近交易记录 */
.recent-section {
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 20px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.view-all {
  font-size: 13px;
  color: #4A90E2;
}

.transaction-list {
  /* 交易列表容器 */
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f5f5f5;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  font-weight: bold;
  font-size: 16px;
}

.transaction-icon.income {
  background-color: #f6ffed;
  color: #52c41a;
}

.transaction-icon.expense {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.transaction-info {
  flex: 1;
}

.transaction-desc {
  font-size: 15px;
  color: #333;
  margin-bottom: 4px;
}

.transaction-meta {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
}

.transaction-amount {
  font-size: 16px;
  font-weight: 600;
}
