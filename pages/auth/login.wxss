/* login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0 30px;
  background-color: #f5f5f5;
}

.logo-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 40px;
}

.app-logo {
  width: 120px;
  height: 120px;
  background-color: #4A90E2;
  border-radius: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56px;
  margin-bottom: 20px;
  box-shadow: 0 8px 24px rgba(74, 144, 226, 0.3);
}

.app-name {
  font-size: 28px;
  font-weight: 700;
  color: #333;
  margin-bottom: 10px;
}

.app-slogan {
  font-size: 16px;
  color: #666;
}

.login-section {
  width: 100%;
  padding-bottom: 40px;
}

.login-btn {
  background-color: #4A90E2;
  color: white;
  border-radius: 28px;
  font-size: 16px;
  font-weight: 600;
  padding: 12px 0;
  margin-bottom: 16px;
  box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
}

.login-btn:active {
  background-color: #3A80D2;
}

.guest-btn {
  background-color: white;
  color: #666;
  border-radius: 28px;
  font-size: 14px;
  padding: 12px 0;
  border: 1px solid #ddd;
}

.tips-section {
  padding-bottom: 30px;
}

.tip-title {
  font-size: 14px;
  color: #999;
  margin-bottom: 10px;
  text-align: center;
}

.tip-content text {
  display: block;
  font-size: 12px;
  color: #999;
  margin-bottom: 6px;
  line-height: 1.6;
}