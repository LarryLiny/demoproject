/* 全局样式 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  color: #333;
  font-size: 14px;
}

.container {
  padding: 16px;
}

.card {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #333;
}

.btn-primary {
  background-color: #4A90E2;
  color: white;
  border-radius: 24px;
  padding: 10px 20px;
  text-align: center;
  font-size: 15px;
  font-weight: 500;
}

.btn-secondary {
  background-color: #fff;
  color: #4A90E2;
  border: 1px solid #4A90E2;
  border-radius: 24px;
  padding: 10px 20px;
  text-align: center;
  font-size: 15px;
  font-weight: 500;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
  margin-bottom: 12px;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 16px;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 金额样式 */
.income-amount {
  color: #52c41a;
  font-weight: 600;
}

.expense-amount {
  color: #ff4d4f;
  font-weight: 600;
}

.balance-amount {
  font-size: 24px;
  font-weight: 700;
  color: #333;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  text-align: center;
}

.empty-state-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state-text {
  color: #999;
  font-size: 14px;
}